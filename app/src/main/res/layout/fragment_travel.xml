<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C9C9C9"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ind"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginRight="33dp"
                android:layout_marginBottom="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/flag_ind" />

            <ImageView
                android:id="@+id/usa"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginRight="33dp"
                android:layout_marginBottom="50dp"
                android:scaleType="centerCrop"
                android:src="@drawable/flag_usa" />

            <ImageView
                android:id="@+id/can"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginRight="33dp"
                android:layout_marginBottom="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/flag_can" />

            <ImageView
                android:id="@+id/germ"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginBottom="50dp"
                android:scaleType="centerCrop"
                android:src="@drawable/flag_ger" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/jap"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginRight="33dp"
                android:layout_marginBottom="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/flag_jap" />

            <ImageView
                android:id="@+id/fra"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginRight="33dp"
                android:layout_marginBottom="50dp"
                android:scaleType="centerCrop"
                android:src="@drawable/flag_fra" />

            <ImageView
                android:id="@+id/singa"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginRight="33dp"
                android:layout_marginBottom="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/flag_singa" />

            <ImageView
                android:id="@+id/ita"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginBottom="50dp"
                android:scaleType="centerCrop"
                android:src="@drawable/flag_ita" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/sk"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginRight="33dp"
                android:layout_marginBottom="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/flag_sk" />

            <ImageView
                android:id="@+id/swit"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginRight="33dp"
                android:layout_marginBottom="50dp"
                android:scaleType="centerCrop"
                android:src="@drawable/flag_swit" />

            <ImageView
                android:id="@+id/uae"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginRight="33dp"
                android:layout_marginBottom="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/flag_uae" />

            <ImageView
                android:id="@+id/sey"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginBottom="50dp"
                android:scaleType="centerCrop"
                android:src="@drawable/flag_sey" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mex"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginRight="33dp"
                android:layout_marginBottom="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/flag_mex" />

            <ImageView
                android:id="@+id/brit"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginRight="33dp"
                android:layout_marginBottom="50dp"
                android:scaleType="centerCrop"
                android:src="@drawable/flag_brit" />

            <ImageView
                android:id="@+id/braz"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginRight="33dp"
                android:layout_marginBottom="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/flag_braz" />

            <ImageView
                android:id="@+id/pak"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginBottom="50dp"
                android:scaleType="centerCrop"
                android:src="@drawable/flag_pak" />

        </LinearLayout>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_passenger_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Passenger Name"
            android:padding="12dp"
            android:textColorHint="@color/textColorSecondary"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/textColorPrimary"
            app:hintTextColor="@color/textColorSecondary" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Passenger Age"
            android:padding="12dp"
            android:textColorHint="@color/textColorSecondary"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/textColorPrimary"
            app:hintTextColor="@color/textColorSecondary" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Passport Number"
            android:padding="12dp"
            android:textColorHint="@color/textColorSecondary"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/textColorPrimary"
            app:hintTextColor="@color/textColorSecondary" />


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_date_of_travel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date of Travel"
            android:inputType="date"
            android:padding="12dp"
            android:textColorHint="@color/textColorSecondary"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/textColorPrimary"
            app:hintTextColor="@color/textColorSecondary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/FromSpinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp" />

            <Spinner
                android:id="@+id/ToSpinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp" />

        </LinearLayout>

        <RadioGroup
            android:id="@+id/radioGroupCabinClass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_economy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="Economy" />

            <RadioButton
                android:id="@+id/radio_business"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="Business" />

            <RadioButton
                android:id="@+id/radio_first"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="First" />
        </RadioGroup>

        <Button
            android:id="@+id/btn_book_itinerary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#03DAC5"
            android:backgroundTint="@color/colorAccent"
            android:padding="12dp"
            android:text="Book Itinerary"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>
